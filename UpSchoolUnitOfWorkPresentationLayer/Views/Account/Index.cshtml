@model AccountViewModel
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<div class="container">
    <br />
    <form method="post">
        <label>Gönderici ID</label>
        <input type="text" asp-for="SenderID" class="form-control" />
        <br />

        <label>Alıcı ID</label>
        <input type="text" asp-for="ReceiverID" class="form-control" />
        <br />

        <label>ÜCRET</label>
        <input type="text" asp-for="Amount" class="form-control" />
        <br />

        <button type="submit" class="btn btn-outline-danger">GÖNDER</button>
    </form>
</div>
